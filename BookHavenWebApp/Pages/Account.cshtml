@page
@model BookHavenWebApp.Pages.AccountModel
@{
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container my-5">
    <div class="row">
        <!-- Profile Section -->
        <div class="col-md-12 text-center">
            
            <h2 class="mt-3">@Model.user.FirstName @Model.user.LastName</h2> 
            <p class="text-muted">@Model.user.Email</p>
            <p class="text-muted">Member since @Model.user.DateCreated.ToString("dd MMMM yyyy")</p>
            <a asp-page="/EditProfile" class="btn btn-primary">Edit Profile</a>
        </div>
    </div>
</div>

    <div class="row mt-5">
        <!-- Security Section -->
        <div class="col-md-6">
            <h4>Security</h4>

            <div class="card mb-3">
                <div class="card-body">
                    <h6 class="card-title">Change Password</h6>

                <form method="post" asp-page-handler="PasswordChange">
                        <div class="mb-3">
                            <label for="CurrentPassword" class="form-label">Current Password</label>
                            <input type="password" class="form-control" id="CurrentPassword" asp-for="CurrentPassword">
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="NewPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="NewPassword" asp-for="NewPassword">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="ConfirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Change Password</button>
                    </form>

                </div>
            </div>
            </div>

    <div class="border p-3 mb-3">
        <h6>Delete Account</h6>
        <p>Warning: This action cannot be undone.</p>
        <form method="post" asp-page-handler="DeleteAccount">
            <button type="submit" class="btn btn-danger btn-custom">Delete Account</button>
        </form>
    </div>
        </div>
<!-- Reviews and Orders Section -->
<div class="col-md-6">
    <div class="mb-4">
        <!-- Orders -->
        @if (Model.orders.Count > 0)
        {

            <h5>My Orders</h5>
            @foreach (LogicLayer.EntityClasses.Order order in Model.orders)
            {
                <div class="order border p-3 mb-3">
                    <h6>Order #@order.Id</h6>
                    <p>Placed on: @order.DateCreated.ToString("dd MMMM yyyy")</p>
                    @foreach (LogicLayer.EntityClasses.OrderItem item in order.OrderItems)
                    {
                        <div class="d-flex align-items-center mb-2">
                            <img src="/Resources/@item.Book.ImagePath" class="me-3 img-fluid" style="width: 70px" alt="Product A">
                            <span>@item.Book.Title - €@item.Book.Price</span>
                        </div>
                    }
                    <small class="text-muted">Total: €@order.TotalPrice</small>
                </div>
            }
        }
      </div>
</div>



<partial name="_ValidationScriptsPartial" />
