@page
@model BookHavenWebApp.Pages.AccountModel
@{
}

<div class="container my-5">
    <div class="row">
        <!-- Profile Section -->
        <div class="col-md-12 text-center">
            
            <h2 class="mt-3">@Model.user.FirstName @Model.user.LastName</h2> 
            <p class="text-muted">@Model.user.Email</p>
            <p class="text-muted">Member since @Model.user.DateCreated.ToString("dd MMMM yyyy")</p>
            <a href="/EditProfile" class="btn btn-primary">Edit Profile</a>
        </div>
    </div>
</div>

    <div class="row mt-5">
        <!-- Security Section -->
        <div class="col-md-6">
            <h4>Security</h4>

            <div class="card mb-3">
                <div class="card-body">
                    <h6 class="card-title">Change Password</h6>

                <form method="post" asp-page-handler="PasswordChange">
                        <div class="mb-3">
                            <label for="CurrentPassword" class="form-label">Current Password</label>
                            <input type="password" class="form-control" id="CurrentPassword" asp-for="CurrentPassword">
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="NewPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="NewPassword" asp-for="NewPassword">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="ConfirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Change Password</button>
                    </form>

                </div>
            </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Delete Account</h6>
                    <p class="text-danger">Warning: This action cannot be undone.</p>
                    <a href="/Account/Delete" class="btn btn-danger">Delete Account</a>
                </div>
            </div>
        </div>

        <partial name="_ValidationScriptsPartial" />
