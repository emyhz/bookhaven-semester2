@page
@model BookHavenWebApp.Pages.AccountModel
@{
}

<div class="container mt-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mt-5">
            <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <!-- Profile Section -->
    <div class="container my-5">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="mt-3">@Model.user.FirstName @Model.user.LastName</h2>
                <p class="text-muted">@Model.user.Email</p>
                <p class="text-muted">Member since @Model.user.DateCreated.ToString("dd MMMM yyyy")</p>
                <a asp-page="/EditProfile" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>
    </div>

    <!-- Two-Column Layout -->
    <div class="row mt-5">
        <!-- Left Column -->
        <div class="col-md-6">
            <!-- Security Section -->
            <div class="card mb-3">
                <div class="card-body">
                    <h6 class="card-title">Change Password</h6>
                    <form method="post" asp-page-handler="PasswordChange">
                        <div class="mb-3">
                            <label for="CurrentPassword" class="form-label">Current Password</label>
                            <input type="password" class="form-control" id="CurrentPassword" asp-for="CurrentPassword">
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="NewPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="NewPassword" asp-for="NewPassword">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="ConfirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Change Password</button>
                    </form>
                </div>
            </div>

            <!-- Delete Account Section -->
            <div class="border p-3 mb-3">
                <h6>Delete Account</h6>
                <p>Warning: This action cannot be undone.</p>
                <form method="post" asp-page-handler="DeleteAccount">
                    <button type="submit" class="btn btn-danger btn-custom">Delete Account</button>
                </form>
            </div>

            <!-- Manage Address Section -->
            <div class="border p-3 mb-3">
                <h6>My Address</h6>
                @if (Model.LastUsedAddress != null)
                {
                    <p><strong>Address:</strong> @Model.LastUsedAddress.Address</p>
                    <p><strong>City:</strong> @Model.LastUsedAddress.City</p>
                    <p><strong>Country:</strong> @Model.LastUsedAddress.Country</p>
                    <p><strong>Zip Code:</strong> @Model.LastUsedAddress.ZipCode</p>
                }
                else
                {
                    <p class="text-danger">No address available.</p>
                }
            </div>

        </div>


       
        

        <!-- Right Column -->
        <div class="col-md-6">
            <!-- Orders Section -->
            <div class="mb-4">
                <h4>My Orders</h4>
                @if (Model.orders.Count > 0)
                {
                    @foreach (LogicLayer.EntityClasses.Order order in Model.orders)
                    {
                        <div class="order border p-3 mb-3">
                            <h6>Order #@order.Id</h6>
                            <p>Placed on: @order.DateCreated.ToString("dd MMMM yyyy")</p>
                            @foreach (LogicLayer.EntityClasses.OrderItem item in order.OrderItems)
                            {
                                <div class="d-flex align-items-start mb-3">
                                    <!-- Image -->
                                    <img src="/Resources/@item.Book.ImagePath" class="me-3 img-fluid" style="width: 70px" alt="Product Image">

                                    <!-- Details -->
                                    <div>
                                        <p class="mb-1">@item.Book.Title - €@item.Book.Price</p>
                                        @if (order.OrderStatus == LogicLayer.Enums.OrderStatus.DELIVERED)
                                        {
                                            <a asp-page="/LeaveReview"
                                               asp-route-orderId="@order.Id"
                                               asp-route-bookId="@item.Book.Id"
                                               class="btn btn-outline-success btn-sm rounded-pill px-3 py-1 mt-1">
                                                ✍️ Write a Review
                                            </a>
                                        }
                                        <p class="mb-0">
                                            <span>
                                                Status:
                                                <span class="badge
                                                @(order.OrderStatus == LogicLayer.Enums.OrderStatus.DELIVERED ? "bg-success" :
                                                  order.OrderStatus == LogicLayer.Enums.OrderStatus.SHIPPED ? "bg-warning" :
                                                  "bg-secondary")">
                                                    @order.OrderStatus
                                                </span>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            }
                            <small class="text-muted">Total: €@order.TotalPrice</small>
                        </div>
                    }
                }
                else
                {
                    <p>No orders found.</p>
                }
            </div>

            <!-- Reviews Section -->
            <div class="mb-4">
                <h4>My Reviews</h4>
                @if (Model.reviews.Count > 0)
                {
                    @foreach (LogicLayer.EntityClasses.Review review in Model.reviews)
                    {
                        <div class="review border p-3 mb-3">
                            <h6>@review.Book.Title</h6>
                            <img src="/Resources/@review.Book.ImagePath" class="me-3 img-fluid" style="width: 70px" alt="Product Image">

                            <p><strong>Rating:</strong> @review.Rating/5</p>
                            @if (!string.IsNullOrEmpty(review.Title))
                            {
                                <p><strong>Title:</strong> @review.Title</p>
                            }
                            @if (!string.IsNullOrEmpty(review.Comment))
                            {
                                <p>@review.Comment</p>
                            }

                            <!-- Edit and Delete Buttons -->
                            <form method="post" asp-page-handler="EditReview" class="d-inline">
                                <input type="hidden" name="reviewId" value="@review.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-primary">Edit</button>
                            </form>
                            <form method="post" asp-page-handler="DeleteReview" onsubmit="return confirm('Are you sure you want to delete this review?');" class="d-inline">
                                <input type="hidden" name="reviewId" value="@review.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    }
                }
                else
                {
                    <p>No reviews found.</p>
                }
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
