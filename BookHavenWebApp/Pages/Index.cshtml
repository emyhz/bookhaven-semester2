@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <p class="text-uppercase text-primary fw-bold">Limited-Time Offer</p>
            <h1 class="display-4 fw-bold">Discover Your Next Favorite Book – Anytime, Anywhere!</h1>
            <p>
                Whether you prefer the charm of a physical book or the convenience of an audiobook, we’ve got you covered. Join today and support local bookstores
            </p>
            <a href="/SignUp" class="btn btn-primary btn-lg">Sign up today</a>
        </div>

        <div class="col-md-6 text-center">
            <img src="/Resources/Login.Signup.png" alt="Audiobook Sample" class="img-fluid">
        </div>
    </div>
</div>


<div class="container mt-5">
    <h2 class="text-center">Our Books</h2>
    <p class="text-center">Browse bestsellers from our bookstore partners, updated hourly.</p>

    <!-- Grid for books -->
    <div class="row justify-content-center">
        <!-- Book 1 -->
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card">
                <img src="/Resources/A court of thorns and roses.jpg" class="card-img-top" alt="Book 1">
                <div class="card-body text-center">
                    <h5 class="card-title">A court of Thorns and Roses</h5>
                </div>
            </div>
        </div>

        <!-- Book 2 -->
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card">
                <img src="/Resources/ofMiceAndMen.jpg" class="card-img-top" alt="Book 2">
                <div class="card-body text-center">
                    <h5 class="card-title">Of Mice and Men</h5>
                </div>
            </div>
        </div>

        <!-- Book 3 -->
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card">
                <img src="/Resources/Persepolia (physical).jpg" class="card-img-top" alt="Book 3">
                <div class="card-body text-center">
                    <h5 class="card-title">Persepolis</h5>
                </div>
            </div>
        </div>
    </div>
</div>