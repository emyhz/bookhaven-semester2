@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold">Discover Your Next Favorite Book – Anytime, Anywhere!</h1>
            <p>
                Whether you prefer the charm of a physical book or the convenience of an audiobook, we’ve got you covered. Join today and support local bookstores
            </p>
            <a href="/Books" class="btn btn-primary btn-lg">Browse our books</a>
        </div>

        <div class="col-md-6 text-center">
            <img src="/Resources/Login.Signup.png" alt="Audiobook Sample" class="img-fluid">
        </div>
    </div>
</div>


<!-- BESTSELLING BOOKS -->
<div class="container mt-5">
    <h2 class="text-center fw-bold">Best selling Books</h2>
    <p class="text-center text-muted">Browse bestsellers from our bookstore.</p>

    <!-- Grid for books -->
    <div class="row justify-content-center mt-4">
        @foreach (var book in Model.BestsellingBooks)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <a href="/BookDetails/@book.Id" class="text-decoration-none">
                    <div class="card border-0 shadow-sm text-center">
                        <img src="@book.ImagePath" class="card-img-top img-fluid mt-3" alt="@book.Title" style="height: 300px; object-fit: contain;" />
                        <div class="card-body">
                            <h5 class="card-title text-dark">@book.Title</h5>
                            <p class="card-text text-muted">@book.Author</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>