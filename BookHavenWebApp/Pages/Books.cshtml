@page
@model BookHavenWebApp.Pages.BooksModel
@{
    ViewData["Title"] = "Books";
}



<div class="container-fluid p-5">
    <div class="text-center">
        <h1>@ViewData["Title"]</h1>
        <p class="lead mb-5">Explore our vast collection of books across all genres</p>
    </div>

    <!-- Search Form -->
    <form method="get" class="mb-4">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <input type="text" name="title" value="@Model.Title" class="form-control" placeholder="Search by title" />
            </div>
            <div class="col-md-4">
                <input type="text" name="author" value="@Model.Author" class="form-control" placeholder="Search by author" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </div>
    </form>




    <!-- Dropdown Filter -->
    <form method="get" class="mb-4">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <select class="form-select" name="filter" onchange="this.form.submit()">
                    <option value="" selected="@((Model.Filter == "") ? "selected" : null)">All Books</option>
                    <option value="Physical" selected="@((Model.Filter == "Physical") ? "selected" : null)">Physical Books</option>
                    <option value="Audio" selected="@((Model.Filter == "Audio") ? "selected" : null)">Audio Books</option>
                </select>
            </div>
        </div>
    </form>




    <!-- Books Grid -->
    <div class="row">
        <div class="col-12">
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
                @foreach (LogicLayer.EntityClasses.Book book in Model.Books)
                {
                    <div class="col">
                        <a href="/BookDetails/@book.Id" class="card-link text-decoration-none">
                            <div class="card border-0 shadow-sm h-100">
                                <img src="/Resources/@book.ImagePath" class="card-img-top img-fluid mt-3" alt="Book Cover" style="width: 150px; height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">@book.Title</h5>
                                    <p class="card-text mb-1 text-muted">Author: @book.Author</p>

                                    @if (book.DiscountPrice < book.Price)
                                    {
                                        <p class="card-text">
                                            <span class="text-danger text-decoration-line-through">€@book.Price</span>
                                            <span class="fw-bold text-success">€@book.DiscountPrice</span>
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="card-text"><strong>€@book.Price</strong></p>
                                    }
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Pagination Controls -->
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center mt-4">
            <!-- Previous Page Button -->
            @if (Model.CurrentPage > 1)
            {
                <!-- If not on the first page, enable the 'Previous' button -->
                <li class="page-item">
                    <a class="page-link" href="?currentPage=@(Model.CurrentPage - 1) &filter=@Model.Filter">Previous</a>
                </li>
            }
            else
            {
                <!-- Disable the 'Previous' button on the first page -->
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
            }

            <!-- Page Number Links -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <!-- Highlight the current page number -->
                    <li class="page-item active">
                        <span class="page-link">@i</span>
                    </li>
                }
                else
                {
                    <!-- Link to other page numbers -->
                    <li class="page-item">
                        <a class="page-link" href="?currentPage=@i &filter=@Model.Filter">@i</a>
                    </li>
                }
            }

            <!-- Next Page Button -->
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <!-- If not on the last page, enable the 'Next' button -->
                <li class="page-item">
                    <a class="page-link" href="?currentPage=@(Model.CurrentPage + 1) &filter=@Model.Filter">Next</a>
                </li>
            }
            else
            {
                <!-- Disable the 'Next' button on the last page -->
                <li class="page-item disabled">
                    <a class="page-link">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>
