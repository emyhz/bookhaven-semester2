<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookHavenWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookHavenWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- NAVIGATION BAR -->
<header>
    <nav class="py-2 bg-white border-bottom shadow-sm fixed-top">
        <div class="container-fluid d-flex flex-wrap px-3 align-items-center justify-content-between">
            <ul class="nav me-auto align-items-center">
                <a class="navbar-brand highlight px-2 d-flex align-items-center" asp-area="" asp-page="/Index">
                    <img src="/img/BookHaven Logo.png" alt="Logo" class="me-2" style="height: 90px; width: auto;">
                        <span style="color: #90AA86; font-size: 1.5rem;">BookHaven</span>
                </a>
                <li class="nav-item"><a class="nav-link link-dark px-3" asp-area="" asp-page="/Books">Books</a></li>
                <li class="nav-item"><a class="nav-link link-dark px-3" asp-area="" asp-page="/AboutUs">About us</a></li>
            </ul>




                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/img/web-account.png" style="height: 32px; width: auto;" class="rounded-circle">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end text-small shadow" aria-labelledby="dropdownUser2">
                            <li><a class="dropdown-item" asp-page="/Login">Log In</a></li>
                            <li><a class="dropdown-item" asp-page="/SignUp">Sign Up</a></li>
                        </ul>
                    </div>
                
            </ul>
        </div>
    </nav>
</header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BookHavenWebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>