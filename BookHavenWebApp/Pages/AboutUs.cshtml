@page
@model PrivacyModel
@{
    ViewData["Title"] = "About us";
}
<h1>@ViewData["Title"]</h1>


<!-- About Section -->
<section class="about-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <img src="/img/aboutUs.png" alt="About BookHaven" class="img-fluid featured-image" >
            </div>
            <div class="col-lg-6">
                <h2 class="display-6 fw-bold">About BookHaven</h2>
                <p class="lead">Welcome to BookHaven, your ultimate destination for discovering, browsing, and purchasing books. We are passionate about creating a platform that caters to book lovers, offering a diverse range of genres and formats to suit every reader's preference.</p>
                <p>At BookHaven, we believe in the power of books to transform lives, inspire imagination, and connect people from all walks of life. Our mission is to make it easy for you to find your next great read, whether you're looking for bestsellers, hidden gems, or something in between.</p>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-box">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-book"></i>
                    </div>
                    <h5 class="fw-bold">Diverse Selection</h5>
                    <p>Explore a vast collection of books across different genres, from timeless classics to the latest bestsellers.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-box">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-heart"></i>
                    </div>
                    <h5 class="fw-bold">Personalized Recommendations</h5>
                    <p>Receive book suggestions tailored to your reading preferences and discover new authors and genres.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-box">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-cart"></i>
                    </div>
                    <h5 class="fw-bold">Easy & Secure Purchase</h5>
                    <p>Enjoy a seamless shopping experience with multiple payment options and secure checkout.</p>
                </div>
            </div>
        </div>
    </div>
</section>
